		ImageIcon imgTaiKhoan = new ImageIcon("images/user.png");
		lblHinhTaiKhoan.setIcon(imgTaiKhoan);
		lblHinhTaiKhoan.setPreferredSize(new Dimension(64, 64));
		lblQuanLyTaiKhoan = new JLabel("Quản lý tài khoản");

		pnLeftOfCenter2.add(lblHinhTaiKhoan);
		pnLeftOfCenter2.add(lblQuanLyTaiKhoan);
		pnLeftOfCenter.add(pnLeftOfCenter2);

		JPanel pnLeftOfCenter3 = new JPanel();
		pnLeftOfCenter3.setLayout(new FlowLayout(FlowLayout.LEFT));
		lblHinhThongKeReturn = new JLabel();
		ImageIcon imgReturn = new ImageIcon("images/thongke.png");
		lblHinhThongKeReturn.setIcon(imgReturn);
		lblHinhThongKeReturn.setPreferredSize(new Dimension(64, 64));
		lblThongKeReturn = new JLabel("Thống kê Return tháng & năm");

		pnLeftOfCenter3.add(lblHinhThongKeReturn);
		pnLeftOfCenter3.add(lblThongKeReturn);
		pnLeftOfCenter.add(pnLeftOfCenter3);

		JPanel pnLeftOfCenter4 = new JPanel();
		pnLeftOfCenter4.setLayout(new FlowLayout(FlowLayout.LEFT));
